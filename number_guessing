import random

top_of_range = input("Type a number: ")
if top_of_range.isdigit():
    top_of_range = int(top_of_range)
    if top_of_range <= 0:
        print('Please type a number larger than 0 next time.')
        quit()
else:
    print('Please type a number next time.')
    quit()

random_number = random.randint(0, top_of_range)
print( random_number )
#in this if we type no. greater than zero then random method works but once if we type negative number 
#then it do not work plus the random method some how gives the output of negative number